@{

    ViewData["Title"] = "Task Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    label {
        font-weight: 700;
    }

    #txtdescription {
        width: 100%;
    }

    .tab-content {
        padding-top: 10px;
    }

    .task-list {
        margin-top: 30px;
    }
</style>

<div class="container">
    <div class="">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="personal-tab" data-toggle="tab" href="#personal" role="tab" aria-controls="personal" aria-selected="true">
                            <i class="fa fa-home"></i> Task Management
                        </a>
                    </li>
                </ul>

                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="personal" role="tabpanel" aria-labelledby="personal-tab">
                        <div class="row">

                            <div class="col-md-6">
                                <form role="form" id="formValidate" onsubmit="return validateForm()" name="formValidate">
                                    <h4 class="text-center">Task Assignment</h4>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Employee Name </label>
                                            <div class="form-group">
                                                <select id="EmployeeId" name="EmployeeName" class="form-control Update PHolder"
                                                        data-bind='options:EmployeeDatas,
                                                    optionsText:"Employee_Name",
                                                    optionsValue:"Emp_ID",
                                                    value:SelectedEmployeeID,
                                                    optionsCaption:"Select Employee Name"'>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Task  Status </label>
                                            <div class="form-group">
                                                <select id="Task_Status" class="form-control" name="Task_Status"
                                                        data-bind='options: StatusOptions,
                                                      optionsText: "StatusName",
                                                      optionsValue:"StatusName",
                                                      value: Task_Status,
                                                      optionsCaption: "Select..."'>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Task Title </label>
                                            <div class="form-group">
                                                <input required id="txttitle" name="Task_Title" class="form-control" type="text" data-bind="value: Task_Title, valueUpdate: 'input'" placeholder="Enter Task Title" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <label>Task Description </label>
                                            <div class="form-group">
                                                <textarea id="txtdescription" name="Description" data-bind="value: Description" rows="4" placeholder="Enter Task Description"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-2">
                                            <button type="submit" class="btn btn-success" id="SaveEditTask"  data-bind="click:SaveTaskDetail">Save</button>
                                        </div>
                                        <div class="col-md-2">
                                            <button type="button" class="btn btn-danger" id="DeleteTaskDetail" data-bind="click:CancelTaskDetail">Cancel</button>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-6">
                                <h4 class="text-center">Task List</h4>
                                <div class="row">
                                    <div class="col-md-12">
                                        <table id="DataTable" class="table table-bordered table-striped">
                                            <thead>
                                                <tr>
                                                    <th>S.No.</th>
                                                    <th>Employee Name</th>
                                                    <th>Task Title</th>
                                                    <th>Task Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody data-bind="foreach: TaskDetailLists">
                                                <tr>
                                                    <td><span data-bind="text:($index() + 1)"></span> </td>
                                                    <td><span data-bind="text:Employee_Name" /></td>
                                                    <td> <span data-bind="text: Task_Title" /></td>
                                                    <td> <span data-bind="text: Task_Status" /></td>
                                                    <td>
                                                        <button type="button" class="btn btn-info" data-bind="click:EditEmployeeTaskDetail">Edit</button>
                                                        <button type="button" class="btn btn-danger" data-bind="click:DeleteEmployeeTaskDetail">Delete</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Footer{
    <script src="~/Scripts/Emplyoee_Task.js"></script>
}